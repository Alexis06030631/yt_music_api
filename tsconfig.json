{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es6",
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"types": [
			"node"
		],
		"outDir": "dist",
		"rootDir": "./src/",
		"lib": [
			"es5",
			"scripthost",
			"es2015.collection",
			"es2015.promise",
			"es2015.iterable",
			"dom"
		]
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts"
	]
}